type Mutation

scalar Violation

extend type Query {
  articles(
    offset: Int = 0
    limit: Int = 10
  ): ArticleConnection!
}

type Article {
  id: Int!
  title: String!
  author: String
}

type ArticleConnection {
  total: Int!
  items: [Article!]
}


type ArticleResponse implements Response {
  errors: [Violation]
  article: Article
}

interface Response {
  errors: [Violation]
}

input ArticleInput {
  title: String!
  description: String
}
